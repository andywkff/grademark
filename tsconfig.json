{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
        "esnext"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "alwaysStrict": true,
    "typeRoots": [ "node_modules/@types" ]
  },
  "exclude": [
      "node_modules",
      "build"
  ]
}